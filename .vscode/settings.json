{
  "prettier.enable": true,
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[gitignore]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte",
    "astro",
    "markdown",
    "mdx"
  ],
  "mdx.validate.ignoreLinks": ["/svelte-tweakpane-ui/**/*"],
  "prettier.documentSelectors": [
    "**/*.astro",
    "**/*.svelte",
    "**/.prettierignore",
    "**/.npmrc",
    "**/.eslintignore"
  ],
  "stylelint.enable": true,
  "stylelint.validate": ["css", "html", "svelte", "astro"],
  "stylelint.configBasedir": ".",
  "rewrap.wrappingColumn": 75,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".env": ".env.*",
    "package.json": ".*.js, .*.json, .*.cjs, .*rc, .*ignore, pnpm-lock.yaml, pnpm-workspace.yaml",
    "readme.md": "license*, changelog*"
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
