{
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ignore]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte",
    "astro"
  ],
  "prettier.documentSelectors": [
    "**/*.astro",
    "**/*.svelte",
    "**/.prettierignore",
    "**/.npmrc",
    "**/.eslintignore",
    "**/.sh"
  ],
  "stylelint.validate": ["css", "html", "svelte", "astro"],
  "[shellscript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
