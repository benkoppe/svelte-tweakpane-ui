---
import type { Props } from '@astrojs/starlight/props'
import StarlightPageTitle from '@astrojs/starlight/components/PageTitle.astro'
import { capitalize } from '../../utils/string-utils.ts'

const { componentData } = Astro.props.entry.data
---

{
	componentData && (
		<strong class="component-section-heading">
			{capitalize(componentData.pathParts[0])} Components
		</strong>
	)
}

<StarlightPageTitle {...Astro.props} />

<style>
	strong {
		display: block;
		margin-bottom: -1rem;
		color: var(--sl-color-gray-3);
	}
</style>
